@model List<WorkListDto>
<div class="text-end my-2">
    <a asp-action="Create" asp-controller="Home" class="btn btn-success btn-sm">Yeni iş Ekle</a>
</div>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>İş</th>
            <th>Durumu</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Definition</td>
                <td>@(item.IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                <td><a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>